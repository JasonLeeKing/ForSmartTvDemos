<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:padding="5dp" >

    
    <com.custom.tvzoomview.TvZoomLayout
        android:id="@+id/layout1"
	    android:layout_width="200dp"
	    android:layout_height="200dp">
	
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#ff9b00" />
	
	</com.custom.tvzoomview.TvZoomLayout>

    <com.custom.tvzoomview.TvZoomLayout
        android:id="@+id/layout2"
	    android:layout_width="200dp"
	    android:layout_height="200dp" 
	    android:layout_toRightOf="@+id/layout1">
	
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#ff009f" />
	
	</com.custom.tvzoomview.TvZoomLayout>

    <com.custom.tvzoomview.TvZoomLayout
        android:id="@+id/layout3"
	    android:layout_width="200dp"
	    android:layout_height="200dp" 
	    android:layout_toRightOf="@+id/layout2">
	
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#00b6ff" />
	
	</com.custom.tvzoomview.TvZoomLayout>

   <com.custom.tvzoomview.TvZoomLayout
        android:id="@+id/layout4"
	    android:layout_width="200dp"
	    android:layout_height="200dp" 
	    android:layout_toRightOf="@+id/layout3">
	
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#00ff8e" />
	
	</com.custom.tvzoomview.TvZoomLayout>

</RelativeLayout>